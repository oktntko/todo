{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["@tsconfig/node24/tsconfig.json", "@tsconfig/strictest/tsconfig.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "~/*": ["src/*"]
    },
    // override strictest
    "exactOptionalPropertyTypes": false
  },
  "include": ["src"]
}
