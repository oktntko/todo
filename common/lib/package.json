{
  "name": "@todo/lib",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    "./dayjs": {
      "types": "./src/dayjs.ts",
      "default": "./dist/dayjs.mjs"
    },
    "./remeda": {
      "types": "./src/remeda.ts",
      "default": "./dist/remeda.mjs"
    },
    "./zod": {
      "types": "./src/zod.ts",
      "default": "./dist/zod.mjs"
    }
  },
  "scripts": {
    "build": "tsdown",
    "type-check": "tsc --project tsconfig.base.json --noEmit",
    "lint": "eslint src/ --max-warnings 0",
    "format": "prettier src/ --write",
    "test": "vitest run",
    "test:preview": "vitest --ui"
  },
  "dependencies": {
    "dayjs": "^1.11.19",
    "remeda": "^2.32.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@tsconfig/node24": "^24.0.3",
    "@tsconfig/strictest": "^2.0.8",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "npm-run-all2": "^8.0.4",
    "tsdown": "^0.18.2",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.26.1"
}
