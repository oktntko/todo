{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "APP_NAME",
        "SESSION_SECRET",
        "SESSION_NAME",
        "SESSION_DOMAIN",
        "SESSION_PATH",
        "SECRET_KEY",
        "EXPRESS_PORT",
        "DATABASE_USER",
        "DATABASE_PASSWORD",
        "DATABASE_HOST",
        "DATABASE_PORT",
        "DATABASE_NAME"
      ],
      "dependsOn": ["@todo/lib#build", "@todo/prisma#build"]
    },
    "build": {
      "dependsOn": ["type-check", "^build"]
    },
    "build:msw": {
      "dependsOn": ["build"]
    },
    "type-check": {
      "dependsOn": ["@todo/prisma#prisma:generate", "^type-check"]
    },
    "preview": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"],
      "env": [
        "APP_NAME",
        "SESSION_SECRET",
        "SESSION_NAME",
        "SESSION_DOMAIN",
        "SESSION_PATH",
        "SECRET_KEY",
        "EXPRESS_PORT",
        "DATABASE_USER",
        "DATABASE_PASSWORD",
        "DATABASE_HOST",
        "DATABASE_PORT",
        "DATABASE_NAME"
      ]
    },
    "prisma:generate": {
      "env": ["DATABASE_URL"]
    },
    "lint": {
      "cache": false
    },
    "format": {},
    "test": {
      "env": [
        "APP_NAME",
        "SESSION_SECRET",
        "SESSION_NAME",
        "SESSION_DOMAIN",
        "SESSION_PATH",
        "SECRET_KEY",
        "EXPRESS_PORT",
        "DATABASE_USER",
        "DATABASE_PASSWORD",
        "DATABASE_HOST",
        "DATABASE_PORT",
        "DATABASE_NAME"
      ],
      "dependsOn": ["@todo/lib#build", "@todo/prisma#prisma:generate", "@todo/prisma#build"]
    }
  }
}
